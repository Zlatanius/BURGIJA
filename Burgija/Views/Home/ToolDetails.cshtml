@model Burgija.Models.ToolType

@{
    ViewData["Title"] = "ToolDetails";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />


    <script src="https://kit.fontawesome.com/680ff5430a.js" crossorigin="anonymous"></script>
    <!--<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />--->
    <link rel="stylesheet" href="~/css/toolpage.css" asp-append-version="true" />

</head>

<body>
    <div class="page-content">
        <div class="path-container">
            <p>Mini tools --> Drills  </p>
        </div>
        <div class="item-container">
            <div class="item-img">
            <img src="https://cdn.horme.com.sg/images/product/20130603174032VOYGZSSTOIHWR_700.jpg" />
                
            </div>
            <div class="item-details">
                
                <p class="item-title">@Model.Name</p>
                <p class="item-price">BAM <span id="price-value">@Model.Price</span>KM</p>
                <div class="item-storage">
                    <i class="fa-solid fa-truck fa-lg"></i>
                    <p>13 Kom, Sarajevo</p>
                </div>
                <div class="item-input-form">
                    <p>Kolicina: </p>
                    <input type="number" name="" id="ammount">
                </div>
                <button class="rent-button">Rent</button>
            </div>
        </div>
    </div>
    <!--<partial name="~/Views/Home/_Filter.cshtml" />-->
</body>
</html>
