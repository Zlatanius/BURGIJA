@model Burgija.Models.Tool

@{
    ViewData["Title"] = "Delete";
}

<h1>Remove</h1>

<h3>Are you sure you want to remove this?</h3>
<div>
    <h4>Tool @Html.DisplayFor(model => model.Id)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ToolType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ToolType.Name)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Store)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Store.StoreLocation.Address)
        </dd class>
    </dl>
    
    <form asp-action="Remove">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Remove" class="btn btn-danger" /> |
        <a asp-action="Index">Back to Admin Panel</a>
    </form>
</div>
