@model IEnumerable<Burgija.Models.Rent>

@{
    ViewData["Title"] = "RentHistory";
}

<h1>RentHistory</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tool)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartOfRent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndOfRent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RentPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tool.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartOfRent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndOfRent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discount.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentPrice)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
