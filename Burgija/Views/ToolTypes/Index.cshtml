@model IEnumerable<Burgija.Models.ToolType>

@{
    ViewData["Title"] = "Tools";
}

<div class="left-section">
    <partial name="~/Views/ToolTypes/_FilterPartial.cshtml" />
</div>
<div class="right-section">
    <div class="filters-bar">
        <p class="results">Items: </p>
    </div>
    <div class="tools-grid">
        @foreach (var item in Model)
        {
            @Html.Partial("_ToolTypePartial",item)
        }

    </div>
</div>
